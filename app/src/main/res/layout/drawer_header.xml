<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/drawer_background"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleView"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:src="@drawable/ic_img_empty_avatar"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <fr.ilovemycity.android.utils.components.CustomTextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:layout_above="@+id/email"
        android:layout_alignLeft="@+id/circleView"
        android:layout_alignStart="@+id/circleView"
        app:font="Roboto-Medium.ttf"/>

    <fr.ilovemycity.android.utils.components.CustomTextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user@email.com"
        android:gravity="left"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        app:font="Roboto-Regular.ttf"/>

</RelativeLayout>
