<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        card_view:cardElevation="2dp"
        card_view:cardBackgroundColor="@android:color/white">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_event"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:src="@drawable/placeholder_event"
                    android:scaleType="centerCrop"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="#30000000"/>

                <fr.ilovemycity.android.utils.components.CustomTextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="marquee"
                    app:font="Roboto-Bold.ttf"
                    android:text="Fake Title"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:shadowColor="@color/bg_black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:layout_margin="@dimen/medium_margin"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top"
                android:orientation="vertical"
                android:layout_margin="@dimen/common_margin">

                <fr.ilovemycity.android.utils.components.CustomTextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="marquee"
                    app:font="Roboto-Regular.ttf"
                    android:text="Fake Description"
                    android:textSize="16sp"
                    android:textColor="@color/text_black"/>


                <fr.ilovemycity.android.utils.components.CustomTextView
                    android:id="@+id/tv_where"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="marquee"
                    app:font="Roboto-Regular.ttf"
                    android:text="Fake Where"
                    android:layout_marginTop="@dimen/small_margin"
                    android:textSize="16sp"
                    android:textColor="@color/text_alternative"/>


            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>